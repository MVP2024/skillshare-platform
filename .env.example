# .env.example - шаблон переменных окружения (не храните реальные секреты в репозитории)

# Django
SECRET_KEY=replace_me_with_a_strong_secret_key
DEBUG=False
ALLOWED_HOSTS=<ваш_внешний_ip>,127.0.0.1,localhost

# Database (Postgres)
DB_NAME=skillshare_db
DB_USER=skillshare_user
DB_PASSWORD=replace_db_password
DB_HOST=127.0.0.1
DB_PORT=5432

# Stripe / внешне
STRIPE_SECRET_KEY=sk_test_xxx
BASE_URL=https://example.com

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# Email (разработка - консоль)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Email (production) - раскомментируйте и заполните, чтобы использовать реальный SMTP
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=you@example.com
EMAIL_HOST_PASSWORD=replace_email_password

# Добавить можно другие переменные окружения, необходимые в вашем проакте
